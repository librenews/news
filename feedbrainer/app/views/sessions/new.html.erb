<div class="login-container">
  <div class="login-card">
    <div class="login-header">
      <div class="login-logo">ðŸ§ </div>
      <h1>Welcome to FeedBrainer</h1>
      <p>Connect your Bluesky account to get started</p>
    </div>

    <%= form_with url: "/auth/bluesky/start", method: :get, class: "login-form", local: true do |f| %>
      <div class="form-group">
        <%= f.label :handle, "Bluesky Handle" %>
        <div class="input-wrapper">
          <span class="input-prefix">@</span>
          <%= f.text_field :handle, placeholder: "username.bsky.social", class: "form-input", required: true, autofocus: true %>
        </div>
        <p class="form-hint">Enter your full handle (e.g. alice.bsky.social)</p>
      </div>

      <div class="form-actions">
        <%= f.button type: "submit", class: "btn btn-primary btn-block btn-lg" do %>
          Connect with Bluesky
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path><polyline points="10 17 15 12 10 7"></polyline><line x1="15" y1="12" x2="3" y2="12"></line></svg>
        <% end %>
      </div>
    <% end %>

    <div class="login-footer">
      <p>By connecting, you agree to our Terms of Service and Privacy Policy.</p>
    </div>
  </div>
</div>
