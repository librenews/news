<div class="max-w-4xl mx-auto px-4 py-8 h-[calc(100vh-4rem)] flex flex-col">
  <div class="flex justify-between items-center mb-6">
    <div class="flex items-center gap-4">
      <%= link_to chats_path, class: "text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
      <% end %>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
        <%= @chat.title.presence || "New Chat" %>
      </h1>
    </div>
    <div class="text-sm text-gray-500">
      <%= @chat.chat_contexts.map { |cc| cc.context.class.name }.join(", ") %>
    </div>
  </div>

  <div class="flex-1 overflow-y-auto mb-6 space-y-6 p-4 bg-gray-50 dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800" id="messages">
    <% if @messages.empty? %>
      <div class="text-center text-gray-500 mt-8">
        <p>Start the conversation!</p>
      </div>
    <% else %>
      <% @messages.each do |message| %>
        <div class="flex <%= message.role == 'user' ? 'justify-end' : 'justify-start' %>">
          <div class="max-w-[80%] rounded-2xl px-4 py-3 <%= message.role == 'user' ? 'bg-blue-600 text-white rounded-br-none' : 'bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 border border-gray-200 dark:border-gray-700 rounded-bl-none shadow-sm' %>">
            <div class="prose dark:prose-invert max-w-none text-sm">
              <%= simple_format(message.content) %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="mt-auto">
    <%= form_with(model: [@chat, ChatMessage.new], url: chat_messages_path(@chat), class: "relative") do |f| %>
      <%= f.text_area :content, rows: 3, class: "block w-full rounded-xl border-0 py-4 pl-4 pr-12 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 dark:bg-gray-800 dark:text-white dark:ring-gray-700", placeholder: "Ask about the news...", required: true %>
      <div class="absolute bottom-3 right-3">
        <%= f.button type: "submit", class: "p-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
            <path d="M3.105 2.289a.75.75 0 00-.826.95l1.414 4.925A1.5 1.5 0 005.135 9.25h6.115a.75.75 0 010 1.5H5.135a1.5 1.5 0 00-1.442 1.086l-1.414 4.926a.75.75 0 00.826.95 28.896 28.896 0 0015.293-7.154.75.75 0 000-1.115A28.897 28.897 0 003.105 2.289z" />
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
